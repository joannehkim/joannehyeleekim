                	<%= f.text_area :message, as: :text, class: 'form-control', required: true %>

                	<div class="hidden">
                    	<%= f.label :nickname %><br>
                		<%= f.text_field :nickname, hint: 'leave this field blank' %>            		
                	</div><br>

                	<%= f.submit 'Submit', class: "btn btn-secondary" %>

                <% end %>


